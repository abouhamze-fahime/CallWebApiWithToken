@using CallApi.Models
@model CallApi.Models.Customer

<form id="Customerform" asp-action="CreateOrEdit" asp-controller="Home" data-ajax="true" data-ajax-begin="StartLoading()" data-ajax-success="CustomerFormSubmited" >
    <div class="modal-header">
        <h5 class="modal-title">@((Model.CustomerId == 0) ? "Add Customer" : $"Edit {Model.Name}")</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">

            <input type="hidden" asp-for="CustomerId" />

            <div class="col-md-6 mb-3">
                <label>Name</label>
                <input type="text" class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Nationalcode</label>
                <input type="text" class="form-control" asp-for="Nationalcode">
                <span class="text-danger" asp-validation-for="Nationalcode"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Mobile</label>
                <input type="text" class="form-control" asp-for="Mobile">
                <span class="text-danger" asp-validation-for="Mobile"></span>

                @*<select asp-for="Mobile" class="form-control"  asp-items="@Html.GetEnumSelectList(typeof(Mobile))"></select>*@
            </div>

            <div class="col-md-6 mb-3">
                <label>Address</label>
                <input type="text" class="form-control" asp-for="Address">
            </div>

            @*<div class="col-md-12">
                <label>Description</label>
                <textarea class="form-control" rows="5" asp-for="Description"></textarea>
            </div>*@

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">@((Model.CustomerId == 0) ? "Create" : "Edit")</button>
    </div>
</form>